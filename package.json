{
  "name": "piggyxp-frontend",
  "version": "0.0.0",
  "main": "index.ts",
  "scripts": {
    "android": "expo run:android",
    "ios": "expo run:ios",
    "test": "jest",
    "prebuild": "pnpm expo prebuild --clean",
    "build-preview": "pnpm eas build -p android --profile preview",
    "build-dev": "pnpm eas build -p android --profile development",
    "start": "pnpm expo start --dev-client"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "moduleNameMapper": {
      "react-native-fbsdk-next": "<rootDir>/__mocks__/react-native-fbsdk-next.js",
      "expo-auth-session": "<rootDir>/__mocks__/expo-auth-session.js",
      "expo-linking": "<rootDir>/__mocks__/expo-linking.js"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "expo": "~54.0.32",
    "expo-auth-session": "^7.0.10",
    "expo-constants": "^18.0.13",
    "expo-dev-client": "^6.0.20",
    "expo-file-system": "^19.0.21",
    "expo-image-picker": "^17.0.10",
    "expo-linking": "^8.0.11",
    "expo-notifications": "^0.32.16",
    "expo-router": "^6.0.22",
    "expo-secure-store": "^15.0.8",
    "expo-status-bar": "~3.0.9",
    "expo-updates": "~29.0.16",
    "jwt-decode": "^4.0.0",
    "react": "19.1.0",
    "react-hook-form": "^7.68.0",
    "react-native": "0.81.5",
    "react-native-fbsdk-next": "^13.4.1",
    "react-native-safe-area-context": "~5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-toast-message": "^2.3.3"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.0",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.16",
    "typescript": "~5.9.2"
  },
  "private": true
}
