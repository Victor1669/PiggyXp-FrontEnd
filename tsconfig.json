{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@App/*": ["../app/*"],
      "@Auth/*": ["Features/Auth/*"],
      "@Assets/*": [
        "../assets/*",
        "Assets/*",
        "Features/Auth/Assets/*",
        "Features/Screens/Profile/Assets/*",
        "Features/Screens/Swiper/Assets/*"
      ],
      "@Components/*": ["Components/*"],
      "@Hooks/*": ["Hooks/*", "Features/Auth/Hooks/*"],
      "@Screens/*": ["Features/Screens/*"],
      "@Styles/*": ["Features/Auth/Styles/*", "Features/Screens/Styles/*"],
      "@UserManagement/*": ["Features/UserManagement/*"]
    }
  },
  "types": ["jest", "react-native"]
}
